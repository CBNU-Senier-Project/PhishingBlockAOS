<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 제목 -->
    <TextView
        android:id="@+id/tv_recent_reports"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="최근 신고된 항목"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- 최근 신고된 번호 섹션 -->
    <TextView
        android:id="@+id/tv_number_reports_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="최근 신고된 번호"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tv_number_report_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="010-1234-5678 (스팸 신고)"
        android:textSize="16sp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/tv_number_report_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="010-9876-5432 (사기 신고)"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <!-- 최근 신고된 URL 섹션 -->
    <TextView
        android:id="@+id/tv_url_reports_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="최근 신고된 URL"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tv_url_report_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="http://example.com (피싱 사이트)"
        android:textSize="16sp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/tv_url_report_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="http://malicious.com (악성 사이트)"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <!-- 최근 신고된 계좌 섹션 -->
    <TextView
        android:id="@+id/tv_account_reports_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="최근 신고된 계좌"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tv_account_report_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123-456-789012 (사기 계좌)"
        android:textSize="16sp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/tv_account_report_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="987-654-321098 (의심 계좌)"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />
    <ProgressBar
        android:id="@+id/loading_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />
    <!-- 뉴스 기사 제목들이 표시될 컨테이너 -->
    <LinearLayout
        android:id="@+id/news_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp" />

    <LinearLayout
        android:id="@+id/news"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:padding="8dp" />

</LinearLayout>
